template(name="product")
  if zeroState
    +productEmpty
  else
    +productList

template(name="productEmpty")
  .zero-state
    input.wings-field.insert(name="insertInput")
    .insert-arrow-icon.icon-back
    .icon-config.animate-spin
    .header.insert tạo sản phẩm đầu tiên
    .sub-header chưa có sản phẩm nào để trình bày
    img.cover-icon(src="/images/svg/products-empty-state.svg")
    a.peter-river.button.create-command Tải danh sách sản phẩm

template(name="productList")
  .insert-wrapper: input.wings-field.insert(name="insertInput" placeholder="tên sản phẩm..")
  .list
    each documents
      .doc-item
        .avatar-wrapper: .avatar-image(class="{{missingImageClass image}}"
          style="background-image:url('{{productImageSrc image}}')") {{avatarLetter name}}
        .doc-info
          .title {{name}} <br/>
          .sub-title {{description}}
        .time-stamp.icon-clock {{standardDate version.createdAt}}
        .price-stamp.icon-ticket {{formatNumber price}} VNĐ