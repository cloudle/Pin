template(name="customerDetail")
  .nano.animated.fadeIn: .nano-content
    input.hide.product-image-input(type="file")
    .section.avatar
      .avatar-wrapper: .avatar-image.editable.product-image(class="{{missingImageClass instance.image}}" style="background-image:url('{{productImageSrc instance.image}}')"
      wings-tip="cập nhật ảnh đại diện") {{avatarLetter instance.companyName}}
        .clear.icon-close-circle
      .headers
        +wingsEditable(model=instance field="companyName" style="heading" label="tên công ty" placeholder="Tên công ty")

    .section
      +wingsEditor(model=instance field="description" style="s5" placeholder="Ghi chú chung...")

    .section
      .region
        .title
          span Thông tin cơ bản.
          span.sub-title (giá bán và chính sách giá)
        .dual-field
          .field: +regionInput(label="chủ doanh nghiệp")

        .dual-field
          .field: +regionInput(label="số điện thoại")
          .field: +regionInput(label="địa chỉ")

        .commands-wrapper
          .commands
            .command.icon-ok-circled2 lưu
      .region
        .title
          .main Chủng loại <br/>
          .sub-title sản phẩm này có nhiều dạng khác nhau, như là kích cỡ hay màu sắc?