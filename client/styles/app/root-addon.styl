@require '../wings.import.styl'
user-config-size = 65px

#root-addon
  padding-bottom user-config-size
  background-color root-addon-bg
  color #ab9ba9

  .channel-wrapper
    margin-top 20px
    font-size 15px
    word-spacing -1px

    ul
      padding-left 0
      list-style none
      user-select none

      .channel-item
        cursor pointer
        padding-left 15px; line-height 25px
        width (root-addon-size - 15)
        border-radius right 4px
        &:hover
          color #fff
          background-color darken(root-addon-bg, 4)
        &.active
          background-color #479ccf
          color #fff
        &:before
          font-size 12px
          vertical-align middle
          line-height 13px

      .header
        position relative
        padding 5px 0 0 15px
        font-weight 600
        .create-channel
          absolute top 2px right 12px
          font-size 18px
          cursor pointer
          &:hover {color: #fff;}

      .channel-item.direct
        .online-status
          display inline-block
          width 7px; height @width
          border-radius 50%
          background-color teal
          margin 0 2px 0 6px
        &:hover, &.active
          .online-status {background-color: #fff}

#root-addon .create-link
  display inline-block
  position relative
  margin 6px 0 0 15px
  font-size 14px
  border-bottom 1px dotted #ab9ba9
  font-weight 600
  cursor pointer
  &:hover
    color #fff; border-bottom 1px dashed #ab9ba9
    margin 0; padding 6px 0 0 15px
    width 100%
    &:before
      content: " "
      height 11px; width @height
      background-color #fff
      transform rotate(45deg)
      absolute left -6px bottom -6px
    &:after
      content: " "
      height 11px; width @height
      background-color #fff
      transform rotate(45deg)
      absolute right -6px bottom -6px

#root-addon .user-configs
  height user-config-size
  background-color darken(root-addon-bg, 4)
  position relative; cursor pointer
  .avatar
    width 50px; height @width
    border-radius 2px
    background-size cover
    absolute left 5px top 8px
  .info
    padding 10px 0 0 60px
    .name
      font-weight 600
      overflow ellipsis
      color #ffffff